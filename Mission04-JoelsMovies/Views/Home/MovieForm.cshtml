@{
    ViewData["Title"] = "New Movie Form";
}
@model Mission04_JoelsMovies.Models.ApplicationResponse


<div class="text-center">
    <h1 class="display-4">Enter a Movie:</h1>
    <br />
    <br />

    <div>
        <form method="post">
            <p style="font-style:italic;">Required</p>
            <label asp-for="Category">*Category:</label>
            <input asp-for="Category" />
            <br />

            <label asp-for="Title">*Title:</label>
            <input asp-for="Title" />
            <br />

            <label asp-for="Year">*Year:</label>
            <input asp-for="Year" />
            <br />

            <label asp-for="Director">*Director:</label>
            <input asp-for="Director" />
            <br />

            <label asp-for="Rating">*Rating:</label> @*//required. dropdown G, PG, PG-13, R*@
            <select asp-for="Rating">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG13">PG-13</option>
                <option value="R">R</option>
            </select>
            <br />
            <br />
            <br />

            <p style="font-style:italic;">Optional</p>
            <label asp-for="Edited">Is this movie edited?</label> @*yes/no option (true/false)*@
            <input asp-for="Edited" />
            <br />

            <label asp-for="Lent_to">Who is this movie lent to? (Leave blank if nobody)</label>
            <input asp-for="Lent_to" />
            <br />

            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" />

            <button type="submit">Submit Movie</button>
        </form>
    </div>
</div>